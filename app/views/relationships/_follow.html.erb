<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー解除", user_relationships_path(user_id: user, tag_name: params[:tag_name]), method: :delete, remote: true, class: "btn btn-primary ml-3" %>
  <% else %>
    <%= link_to "フォロー", user_relationships_path(user_id: user, tag_name: params[:tag_name]), method: :post, remote: true, class: "btn btn-primary ml-3" %>
  <% end %>
<% end %>

