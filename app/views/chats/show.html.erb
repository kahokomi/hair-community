<div class="container-fluid">
  <div class="row">
    <h2 class="mx-auto"><%= @user.username %>さんとのチャットルーム</h2>
  </div>

  <%= form_with model: @chat do |f| %>
    <div class="row field">
      <%= f.text_area :content, class: "form-control col-md-6 offset-3" %>
      <%= f.hidden_field :room_id %>
      <%= f.submit "送信", class: "btn btn-success" %>
    </div>
  <% end %>

　<%# チャット画面の表示 %>
  <div class="chat-message offset-3 col-md-6">
    <% @chats.each do |chat| %>
      <%= render "chats/chat", chat: chat %>
    <% end %>
  </div>
</div>