<div class="container-fluid">
  <div class="row">
    <h2 class="mx-auto"><%= @user.username %>さんとのチャットルーム</h2>
  </div>

    <%= form_with model: @chat do |f| %>
    <div class="row field">
      <%= f.text_area :content, class: "form-control col-md-6 offset-3" %>
      <%= f.hidden_field :room_id %>
      <%= f.submit "送信", class: "btn btn-success" %>
    </div>
    <% end %>



  <%# チャット画面の表示 %>
    <div class="chat-message offset-3 col-md-6">
      <% @chats.each do |chat| %>
        <div class="row">
          <% if chat.user == current_user %>
            <div class="text-right col-md-6 offset-6 mb-2">
              <p class="balloon2"><%= chat.content %></p>
            </div>
          <% else%>
            <div class="text-left balloon1 col-md-6 offset-6 mb-2">
              <%= attachment_image_tag chat.user, :icon_image, fallback: "no_icon.png", size: "50x50", class: "icon" %>
              <p><%= chat.content %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>