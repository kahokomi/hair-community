<% unless controller.controller_name == 'homes' && controller.action_name == 'top' %>
  <nav class="navbar navbar-expand-lg navbar-light nav-header">
    <%= link_to "", tweets_path, class: "navbar-brand" %>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Home", tweets_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mypage", user_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
        <li class="nav-item mt-2 ml-5">ようこそ、<%= current_user.username %>さん</li>
      </ul>
      <%= search_form_for @search, url: users_path do |f| %>
        <%= f.label :username, "名前" %>
        <%= f.search_field :username_cont %>

      　<%= f.radio_button :is_hairdresser_eq, '', {:checked => true} %>指定なし
        <%= f.radio_button :is_hairdresser_eq, true %>美容師
        <%= f.radio_button :is_hairdresser_eq, false %>一般ユーザー
        <%= f.submit '検索', :class => "btn btn-light" %>
      <% end %>
    </div>
  </nav>
<% end %>