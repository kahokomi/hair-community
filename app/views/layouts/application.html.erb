<!DOCTYPE html>
<html>
  <head>
    <title>HairCommunity</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/jscroll/2.4.1/jquery.jscroll.min.js"></script>-->
    <script src="https://kit.fontawesome.com/095da33a05.js" crossorigin="anonymous"></script>
    <meta name="turbolinks-cache-control" content="no-cache">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Abel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@300;400&display=swap" rel="stylesheet">

  </head>

  <body>
    <% if current_page?(root_path) %>
      <div>
    <% elsif controller.controller_name == "sessions" ||
             controller.controller_name == "registrations" ||
             controller.controller_name == "passwords" %>
      <div id="wrap" class="toppage">
    <% else %>
      <div id="wrap" class="otherpage">
    <% end %>

        <% if user_signed_in? && controller.action_name != 'top' %>
          <header>
            <%= render "layouts/header" %>
          </header>
        <% end %>

        <div class="row bg bg-success time-limit">
          <% if flash[:notice] %>
            <p class="mx-auto pt-3"><%= flash[:notice] %></p>
          <% end %>
        </div>

        <%= yield %>

        <% if user_signed_in? && controller.action_name != 'top' %>
          <% if current_user.is_hairdresser == true %>
            <footer class="hd_footer">
          <% else %>
            <footer class="user_footer">
          <% end %>
              <small>©︎hair_community</small>
            </footer>
        <% end %>
      </div>
  </body>
</html>
