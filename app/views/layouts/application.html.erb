<!DOCTYPE html>
<html>
  <head>
    <title>HairCommunity</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/095da33a05.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Abel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@300;400&display=swap" rel="stylesheet">

  </head>


  <body>
      <% if user_signed_in? %>
        <%= render "layouts/header" %>
      <% end %>
      <%= yield %>
      <% if user_signed_in? %>
        <%= render "layouts/footer" %>
      <% end %>
  </body>
</html>
