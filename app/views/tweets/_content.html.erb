<div class="card-body">
  <%# つぶやきの表示内容 %>
  <div class="col-md-9">
    <%= attachment_image_tag tweet.user, :icon_image, fallback: "no_icon.png", size: "50x50" %>
    <%= link_to tweet.user.username, user_path(tweet.user), class: "tweet-font ml-3" %>
    <span id="follow_<%= tweet.user.id %>">
      <%= render "relationships/follow", user: tweet.user %>
    </span>
  </div>
  <div class="col-md-10 offset-1">
    <%= attachment_image_tag tweet, :image, size: "700x500", class: "tweet-image"  %>
  </div>
  <div class="row tweet-text">
    <div class="offset-1 col-md-10 text-break">
      <%= tweet.body %>
    </div>
  </div>

  <%# ユーザーによって表示内容の切り分け %>
  <div class="row align-items-center">
    <% if user_signed_in? && tweet.user_id == current_user.id %>
      <i class="fas fa-heart offset-2"></i><%= tweet.likes.count %>
      <%= link_to "つぶやきを消す", tweet_path(tweet), method: :delete, remote: true, class: "btn btn-danger offset-6" %>
    <% else %>
      <% if current_user.already_liked?(tweet) %>
        <%= link_to tweet_likes_path(tweet), method: :delete, remote: true, class: "offset-2" do %>
          <i class="fas fa-heart"></i>
        <% end %>
        <%= tweet.likes.count %>
      <% else %>
        <%= link_to tweet_likes_path(tweet), method: :post, remote: true, class: "offset-2" do %>
          <i class="far fa-heart"></i>
        <% end %>
        <%= tweet.likes.count %>
      <% end %>
      <%= link_to "はなしてみる", chat_path(tweet.user_id), class: "btn btn-success offset-6" %>
    <% end %>
  </div>
</div>