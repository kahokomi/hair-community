<div class="modal fade tweet_modal" id="tweetModal" tabindex="-1" role="dialog" aria-labelledby="tweetModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tweetModalLabel">つぶやきを投稿する</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: tweet, url: tweets_path do |f| %>
      <div class="modal-body">
        <div id="tweets_error">
          <%= render 'tweets/errors', tweet: @tweet %>
        </div>
        <div class="form_group">
          <%= f.label :image, "画像を添付", class: "control-label" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form_group">
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :user, :tag_list %>
          <%= f.text_field :tag_list, value: @tweet.tag_list.join(','), class: "form-control", placeholder: "2つ以上入力する場合カンマ(,)を入力" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <%= f.submit "投稿", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>