<div class="container-fluid">
  <div class="row mx-auto">
    <div class="card col-md-6 mx-auto">
      <div class="card-body">
        <% if params[:is_hairdresser] == "true" %>
        <h2 class="text-center">美容師新規登録</h2>
        <% else %>
        <h2 class="text-center">一般ユーザ新規登録</h2>
        <% end %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :username, "ユーザーネーム", class: "control-label" %>
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "半角英大小文字・数字をすべて含めて入力してください", class: "form-control col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス", class: "control-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード", class: "control-label" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-12", placeholder: "半角英大小文字・数字をすべて含めて入力してください" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード(確認)", class: "control-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-md-12" %>
          </div>

          <div class="actions text-center my-3">
            <%= f.hidden_field :is_hairdresser, :value => @is_hairdresser %>
            <%= f.submit "新規登録", class: "btn btn-primary col-md-12", data: {confirm: "この内容で登録しますか？"} %>
          </div>
        <% end %>

        <div class="text-center pt-3 top-btnline">
          <%= render "devise/shared/links" %>
        </div>
        <div class="offset-3 row text-center mx-auto">
          <%= link_to "トップへ戻る", root_path, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>