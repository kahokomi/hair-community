<div class="modal fade" id="styleModal" tabindex="-1" role="dialog" aria-labelledby="styleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <% if user.is_hairdresser == true %>
          <h5 class="modal-title" id="styleModalLabel">得意なヘアスタイル</h5>
        <% else %>
          <h5 class="modal-title" id="styleModalLabel">美容室での過ごし方</h5>
        <% end %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if user.is_hairdresser == true %>
          <%= f.collection_check_boxes :hair_style_ids, HairStyle.all, :id, :name %>
        <% else %>
          <%= f.collection_check_boxes :communication_style_ids, CommunicationStyle.all, :id, :name %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">保存して閉じる</button>
      </div>
    </div>
  </div>
</div>