<div class="container-fluid">
  <div class="row pt-3">

    <div class="col-md-5 offset-2 userpage-name">
      <%= attachment_image_tag @user, :icon_image, fallback: "no_icon.png", size: "50x50" %>
      <%= @user.username %>
    </div>
    <div id="follow_<%= @user.id %>" class="mt-2">
        <%= render "relationships/follow", user: @user %>
    </div>
    <div class="col-md-1 text-center userpage-follow__link">
      <div>
        <%= link_to @user.following_ids.count, user_follows_path(@user) %>
      </div>
      <span>フォロー</span>
    </div>
    <div class="col-md-1 text-center userpage-follow__link">
      <div>
        <%= link_to @user.follower_ids.count, user_follows_path(@user) %>
      </div>
      <span>フォロワー</span>
    </div>

  <%# フォローに関連する記述 %>

  <%# ユーザーのプロフィール %>
    <table class="table col-md-8 offset-2">
      <tbody>
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>性別</th>
          <td><%= @user.sex %></td>
        </tr>
        <tr>
          <th>年齢</th>
          <td><%= @user.age %></td>
        </tr>

        <% if @user.is_hairdresser? == true %>
          <tr>
            <th>美容師歴</th>
            <td><%= @user.year %></td>
          </tr>
          <tr>
            <th>所属美容室</th>
            <td><%= @user.hair_salon %></td>
          </tr>
          <tr>
            <th>役職</th>
            <td><%= @user.position %></td>
          </tr>

        <% else %>
          <tr>
            <th>職業</th>
            <td><%= @user.job %></td>
          </tr>
        <% end %>

        <tr>
          <th>自己紹介</th>
          <td><%= @user.introduction %></td>
        </tr>

        <% if @user.is_hairdresser? == true %>
          <tr>
            <th>過去の作品</th>
            <td><%= attachment_image_tag @user, :image, size: "550x500" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% if @user == current_user %>
    <%= link_to "編集する", edit_user_path(@user), class: "btn btn-primary col-md-2 offset-8" %>
  <% end %>
  </div>
</div>