<div class="container-fluid">
  <div class="row my-2">
    <h2 class="mx-auto">検索結果</h2>
  </div>

<%# 検索結果の表示 %>
  <div class="row mx-auto">
    <% if params[:q]['username_cont'] == "" %>
      <h3 class="mx-auto mt-5">検索キーワードがありません。</h3>
    <% elsif @search_users.present? %>
      <table class="table col-md-10 offset-1">
        <thead>
          <tr class="row">
            <th class="col-md-1">
            </th>
            <th class="col-md-4">
              ユーザーID
            </th>
            <th class="col-md-2">
              年齢
            </th>
            <th class="col-md-2">
              職業<span class="badge badge-danger">美容師</span>
            </th>
            <th class="col-md-3">
              役職<span class="badge badge-primary">一般ユーザ</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @search_users.each do |user| %>
            <tr class="row">
                <td class="col-md-1">
                <%= link_to user_path(user) do%>
                  <%= attachment_image_tag user, :icon_image, fallback: "no_icon.png", size: "50x50" %>
                <% end %>
                </td>
                <td class="col-md-4 search-username">
                  <%= link_to user.username, user_path(user) %>
                  <% if user.is_hairdresser == true %>
                    <span class="badge badge-danger search-hairdresser">美容師</span>
                  <% else %>
                    <span class="badge badge-primary search-hairdresser">一般ユーザ</span>
                  <% end %>
                </td>
                <td class="col-md-2">
                  <%= user.age %>
                </td>
                <td class="col-md-2">
                  <%= user.job %>
                </td>
                <td class="col-md-3">
                  <%= user.position %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h3 class="mx-auto mt-5">検索結果がありません</h3>
    <% end %>
  </div>
</div>