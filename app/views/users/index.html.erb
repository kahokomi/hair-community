<div class="container-fluid">
  <div class="row my-2">
    <h2 class="mx-auto">検索結果</h2>
  </div>

<div class="row">
  <% @search_users.each do |user| %>
    <table class="table col-md-10 offset-2">
      <tbody>
        <tr class="row">
          <td class="col-md-3">
          <%= link_to user_path(user) do%>
            <%= attachment_image_tag user, :icon_image, fallback: "no_icon.png", size: "50x50" %>
          <% end %>
          </td>
          <td class="col-md-7 search-username"><%= link_to user.username, user_path(user) %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
  </div>
  </div>
</div>